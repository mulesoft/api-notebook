.modal-visible
  overflow: hidden

.modal
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 1000
  overflow: scroll
  background-color: rgba(0, 0, 0, 0.15)
  .notebook-embedded &
    border: 1px solid rgba(0, 0, 0, 0.2)
    border-radius: 5px

.modal-dialog
  position: relative
  margin: 0 auto
  padding: 1.5em
  max-width: 40em
  .modal-notify &
    max-width: 25em

.modal-content
  border: 1px solid #aaa
  overflow: hidden
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1)
  border-radius: 5px
  background-color: #fff

.modal-header
  position: relative
  padding: 1em
  text-align: center
  text-shadow: 0 -1px 0 rgba(255, 255, 255, 0.3)
  border-bottom: 1px solid #ccc
  background-color: #eee

.modal-title
  margin: 0
  text-align: left

.modal-headline
  border-bottom: dotted 1px #ccc
  padding-bottom: 0.2em
  margin-bottom: 0.5em

.modal-instructions
  margin: 0.5em 0 1em 0

.modal-close
  position: absolute
  top: 1em
  right: 1em
  border: 0
  padding: 0
  cursor: pointer
  appearance: none
  background: transparent

.modal-body
  padding: 1em
  font-size: 0.85em
  .item-list
    width: 100%
    padding: 0
    > li
      clearfix()
      list-style-type: none
      padding: 1em 0
      margin: 0
      border-top: dotted 1px #C4C4C4
      cursor: pointer
      &:hover
        background-color: rgba(0,0,0,0.03)
      > .item-action
        float: left
        width: 10%
        text-align: center
      > .item-description
        float: left
        padding-left: 0.5em
        width: 90%
        > .item-details-link
          float: right
          padding-right: 0.5em
        > .item-details
          display: none
          width: 90%
          margin-top: 0.5em
    > .item-details-visible
      > .item-description
        > .item-details
          display: block
  form
    margin: 0 20px 20px
  .form-group
    margin: auto auto 10px auto
    clearfix()
    .form-label
      text-align: right
      padding-top: 6px
      padding-right: 10px
      float: left
      width: 25%
    .form-content
      float: left
      width: 75%
    input:not([type="checkbox"])
      width: 100%
      border: solid 1px #CCC
      border-bottom-color: #eee
      border-right-color: #eee
      padding: 5px 3px
    input[type="checkbox"]
      float: left
      margin-top: 4px
      margin-left: -20px
    .radio,
    .checkbox
      display: block
      margin: 6px 0
      padding-left: 20px
  .form-footer
    margin: 20px 0 0 25%
