*
  box-sizing: border-box

html
  position: relative
  color: #333
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased

.text-underline
  text-decoration: underline

.text-left
  text-align: left

.text-center
  text-align: center

.text-right
  text-align: right

.text-em
  font-style: italic

.text-small
  font-size: 0.8em
