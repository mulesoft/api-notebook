.application
  width: 95%
  max-width: 52em
  margin: 1em auto

.notebook
  padding: 1em 2em
  border: 1px solid #ccc
  border-top: 0
  border-radius: 0 0 5px 5px
  background: #fff

.notebook-header
  padding: 1em 2em
  border: 1px solid #000
  border-top: 0
  border-radius: 5px 5px 0 0
  background: #333
  color: #fff

  h1
    display: inline-block
    margin: 0 10px 0 0
    vertical-align: middle

.notebook-header-primary
  overflow: hidden
  padding-right: 20px
  > h1
    width: 100%
  > h1:focus
    outline: 0

.notebook-header-secondary
  float: right
  margin-top: 5px
  > button
    margin-left: 5px
    vertical-align: middle

.banner
  padding: 1em 2em
  border: 1px solid #ccc
  border-color: darken($yellow, 20%) #ccc
  background: $yellow
  cursor: pointer

.banner p
  margin: 0

.notebook .cell-result
  border-style: solid
  border-color: $color-result-border
  border-width: 1px 0 0 5px
  font-size: 0.95em
  line-height: 1.45
  font-family: monospace
  background-color: $color-result-bg
  &.result-pending
    display: none
  &.result-error
    background-color: $color-error-bg
    border-left-color: $color-error-border
  > .result-label
    float: left
    padding: .55em 0 .55em .45em
    color: $color-result-label
  > .result-content
    margin: 0 0.3em
    padding: 0.55em 0
    overflow: hidden

.notebook > .cell
  border: 1px solid $color-cell-border
  margin: 1em 0
  position: relative
  min-height: 1.55em

.notebook > .cell > .cell-result
  color: $color-result-text
  &.result-error
    color: $color-error-text

.cell-text .comment
  position: absolute
  top: 50%
  left: -1.5em
  margin-top: -0.5em
  font-family: monospace

.cell-text .comment-close
  left: auto
  right: -20px

.markdown
  padding: 16px
  h1, h2, h3, h4, h5, h6, p, ul, ol
    margin: 0 0 24px;
