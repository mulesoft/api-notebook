$button_color = #5B5B5B

.container
  width: 48em
  margin: 0 auto

.col-mini
  width: 30%

.col-large
  width: 70%

.modal
  position: fixed
  z-index: 200
  top: 100px

  width: 90%
  max-width: 52em
  margin-left: -1px
  border: 1px solid #aaa
  border-radius: 5px

  background: #fff
  box-shadow: 2px 2px 5px rgba(0,0,0,0.1)

.modal-header
  padding: 1em
  border-bottom: 1px solid #ccc
  border-radius: 5px 5px 0 0

  background: #eee
  text-align: center
  text-shadow: 0 -1px 0 rgba(255,255,255,0.3)

  h3
    margin: 0

.modal-body
  padding: 1em

  table
    table-layout: fixed
    width: 100%
    font-size: 14px

  tr
    border-top: 1px solid #eee

    &:first-child
      border-top: 0

  th,
  td
    padding: 8px

    text-align: left

.modal-backdrop
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 199

  background: rgba(0,0,0,0.15)
  cursor: pointer

.modal,
.modal-backdrop
  opacity: 0
  visibility: hidden
  transition: opacity 0.3s ease

.modal-visible
  .modal,
  .modal-backdrop
    opacity: 1
    visibility: visible

.btn-round
  position: relative
  width: 26px
  height: @width
  border: 2px solid $button_color
  background: transparent
  border-radius: 50em


.notebook-exec:after
  content: ''
  position: absolute
  top: 6px
  left: 8px
  display: inline-block
  width: 0
  height: 0
  border: 5px solid transparent
  border-left: 9px solid $button_color

.modal-toggle:after
  content: '?'
  display: block
  position: absolute
  top: 0
  left: 0
  width: 22px
  height: @width
  text-align: center
  line-height: @height
  color: $button_color

.btn-text
  padding: 0
  border: 0
  background: transparent
  color: $button_color
  font-size: 12px
  text-decoration: underline
